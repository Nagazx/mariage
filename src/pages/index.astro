---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="hero min-h-screen
		bg-[url('/mariage-emma-et-quentin/background-mobile.jpeg')]
    md:bg-[url('/mariage-emma-et-quentin/background-desktop.jpeg')]
		xl:bg-[url('/mariage-emma-et-quentin/background-desktop.jpeg')]">
    <div class="hero-overlay bg-opacity-10"></div>
    <div class="hero-content text-white text-center">
      <div class="max-w-1g ">
        <h1 class="fancy-text mb-5 text-5xl">Emma & Quentin</h1>
        <p class="date-text mb-5">Mariage - 31.05.2025</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .hero-content {
    padding-left: 10%;
    justify-self: left;
  }
  .additional-info {
    padding: 20px;
    text-align: center;
  }
  .fancy-text {
    font-family: 'Great Vibes', cursive;
    font-size: 3rem; /* Ajustez la taille de la police selon vos besoins */
  }
  .date-text {
    font-family: 'Great Vibes', cursive;
    font-size: 1.5rem; /* Ajustez la taille de la police selon vos besoins */
  }

  @media (min-width: 768px) {
    .fancy-text {
      font-size: 5rem; /* Taille pour desktop */
    }
    .date-text {
      font-size: 2.5rem; /* Taille pour desktop */
    }
  }
</style>